<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fateflix Data View</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
        }

        .test-row {
            background-color: #f9fafb;
        }

        .real-row {
            background-color: #ffffff;
        }

        .data-table {
            font-size: 12px;
        }

        .data-table th,
        .data-table td {
            max-width: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .data-table th:hover,
        .data-table td:hover {
            overflow: visible;
            white-space: normal;
            word-wrap: break-word;
            max-width: none;
            z-index: 10;
            position: relative;
            background: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .sticky-col {
            position: sticky;
            left: 0;
            background: white;
            z-index: 5;
        }

        .table-wrapper {
            overflow-x: auto;
            max-height: 80vh;
        }
    </style>
</head>

<body class="bg-slate-50 text-slate-900">
    <div class="max-w-full mx-auto px-4 py-6">
        <!-- Header -->
        <div class="flex justify-between items-center mb-6">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">Data Spreadsheet View</h1>
                <p class="text-sm text-slate-500">All survey responses in tabular format. Hover on cells to expand.</p>
            </div>
            <div class="flex gap-3">
                <a href="/admin/dashboard"
                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                    ‚Üê Dashboard
                </a>
                <a href="/admin/export"
                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md hover:bg-indigo-700">
                    Export CSV
                </a>
                <a href="/admin/latest-report"
                    class="inline-flex items-center px-3 py-2 text-sm font-medium text-white bg-green-600 rounded-md hover:bg-green-700">
                    Latest Report
                </a>
            </div>
        </div>

        <!-- Filter Tabs -->
        <div class="mb-4">
            <div class="border-b border-gray-200">
                <nav class="-mb-px flex space-x-6" aria-label="Tabs">
                    <a href="?type=all"
                        class="<%= currentFilter === 'all' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700' %> py-3 px-1 border-b-2 font-medium text-sm">
                        All (<%= totalCount %>)
                    </a>
                    <a href="?type=real"
                        class="<%= currentFilter === 'real' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700' %> py-3 px-1 border-b-2 font-medium text-sm">
                        Real Users (<%= realCount %>)
                    </a>
                    <a href="?type=test"
                        class="<%= currentFilter === 'test' ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700' %> py-3 px-1 border-b-2 font-medium text-sm">
                        Test (<%= testCount %>)
                    </a>
                </nav>
            </div>
        </div>

        <!-- Summary Stats -->
        <div class="mb-4 text-sm text-gray-600">
            Showing <strong>
                <%= rows.length %>
            </strong> submissions with <strong>
                <%= questions.length %>
            </strong> question columns
        </div>

        <!-- Data Table -->
        <div class="bg-white shadow rounded-lg overflow-hidden">
            <div class="table-wrapper">
                <table class="data-table min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50 sticky top-0 z-10">
                        <tr>
                            <th
                                class="sticky-col px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase bg-gray-100">
                                #</th>
                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">City</th>
                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">‚òÄÔ∏è Sun</th>
                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">üåô Moon</th>
                            <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase">‚¨ÜÔ∏è Rising</th>
                            <% questions.forEach(function(q) { %>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase"
                                    title="<%= q.text %>">
                                    <%= q.key %>
                                </th>
                                <% }); %>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% rows.forEach(function(row, idx) { %>
                            <tr class="<%= row.isTest ? 'test-row' : 'real-row' %> hover:bg-blue-50">
                                <td class="sticky-col px-3 py-2 text-gray-400 bg-gray-50">
                                    <%= idx + 1 %>
                                </td>
                                <td class="px-3 py-2 text-gray-600">
                                    <%= new Date(row.createdAt).toLocaleDateString('en-GB', { day: '2-digit' ,
                                        month: 'short' }) %>
                                </td>
                                <td class="px-3 py-2 text-gray-900 font-medium" title="<%= row.userEmail %>">
                                    <%= row.userEmail ? row.userEmail.split('@')[0] + '@...' : '-' %>
                                </td>
                                <td class="px-3 py-2 text-gray-600">
                                    <%= row.birthCity || '-' %>
                                </td>
                                <td class="px-3 py-2 text-gray-600">
                                    <%= row.sunSign || '-' %>
                                </td>
                                <td class="px-3 py-2 text-gray-600">
                                    <%= row.moonSign || '-' %>
                                </td>
                                <td class="px-3 py-2 text-gray-600">
                                    <%= row.risingSign || '-' %>
                                </td>
                                <% questions.forEach(function(q) { %>
                                    <td class="px-3 py-2 text-gray-700" title="<%= row.answers[q.key] || '' %>">
                                        <%= row.answers[q.key] || '-' %>
                                    </td>
                                    <% }); %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% if (rows.length===0) { %>
                <div class="text-center py-10 text-gray-500">
                    No data found for this filter.
                </div>
                <% } %>
        </div>

        <!-- Footer -->
        <div class="mt-4 text-xs text-gray-400 text-center">
            Data exported from FateFlix survey database. Hover over cells to see full content.
        </div>
    </div>
</body>

</html>